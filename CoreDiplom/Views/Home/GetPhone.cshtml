@model NLayerApp.WEB.Models.PhoneViewModel
@{
    ViewData["Title"] = "GetPhone";
}

<h1>GetPhone</h1>

@using (Html.BeginForm("CreatePhone", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <div>
        <label class="col-md-5 control-label">Name</label>
        <div class="col-md-6">
            @Html.TextBoxFor(m => Model.Name, new { @class = "form-control" })
        </div>
    </div>
    <div>
        <label class="col-md-5 control-label">Price</label>
        <div class="col-md-6">
            @Html.TextBoxFor(m => Model.Price, new { @class = "form-control" })
        </div>
    </div>
    <div>
        <label class="col-md-5 control-label">Manufacturer</label>
        <div class="col-md-6">
            @Html.TextBoxFor(m => Model.Manufacturer, new { @class = "form-control" })
        </div>
    </div>
    <div>
        <label class="col-md-5 control-label">Category</label>
        <div class="col-md-6">
            @Html.TextBoxFor(m => Model.Category, new { @class = "form-control" })
        </div>
    </div>
    <div>
        <label class="col-md-5 control-label">Screen</label>
        <div class="col-md-6">
            @Html.TextBoxFor(m => Model.Screen, new { @class = "form-control" })
        </div>
    </div>
    <div>
        <label class="col-md-5 control-label">CPU</label>
        <div class="col-md-6">
            @Html.TextBoxFor(m => Model.CPU, new { @class = "form-control" })
        </div>
    </div>
    <div>
        <label class="col-md-5 control-label">Camera</label>
        <div class="col-md-6">
            @Html.TextBoxFor(m => Model.Camera, new { @class = "form-control" })
        </div>
    </div>
    <div>
        <label class="col-md-5 control-label">CPU</label>
        <div class="col-md-6">
            @Html.TextBoxFor(m => Model.CPU, new { @class = "form-control" })
        </div>
    </div>
    <div>
        <label class="col-md-5 control-label">RAM</label>
        <div class="col-md-6">
            @Html.TextBoxFor(m => Model.RAM, new { @class = "form-control" })
        </div>
    </div>
    <div>
        <label class="col-md-5 control-label">Memory</label>
        <div class="col-md-6">
            @Html.TextBoxFor(m => Model.Memory, new { @class = "form-control" })
        </div>
    </div>
    <div>
        <label class="col-md-5 control-label">QtySimCard</label>
        <div class="col-md-6">
            @Html.TextBoxFor(m => Model.QtySimCard, new { @class = "form-control" })
        </div>
    </div>
    <div>
        <label class="col-md-5 control-label">Charge</label>
        <div class="col-md-6">
            @Html.TextBoxFor(m => Model.Charge, new { @class = "form-control" })
        </div>
    </div>
    <div>
        <label class="col-md-5 control-label">OperationSystem</label>
        <div class="col-md-6">
            @Html.TextBoxFor(m => Model.OperationSystem, new { @class = "form-control" })
        </div>
    </div>
}

<button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("Index", "Home")'">Главная</button>