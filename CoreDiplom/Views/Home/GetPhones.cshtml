@model List<NLayerApp.WEB.Models.PhoneViewModel>
@{
    ViewData["Title"] = "GetPhones";
    Layout = "_Layout_Products";
}

<h1>GetPhones</h1>


@section Filters{
    <form action="/" method="post" style="padding-top: 50px;">
        <div class="checkbox-container">

            <p style="font-weight: bold; margin-bottom: 10px;">Производитель</p>

            <input type="checkbox" id="ch_1">
            <label for="ch_1">Samsung</label>

            <input type="checkbox" id="ch_2">
            <label for="ch_2">IPhone</label>

            <input type="checkbox" id="ch_3">
            <label for="ch_3">ASUS</label>

            @*///////////////////////////////////////////*@
            <p style="font-weight: bold; margin-bottom: 10px; margin-top: 10px;">Размер экрана</p>

            <input type="checkbox" id="ch_4">
            <label for="ch_4">4</label>

            <input type="checkbox" id="ch_5">
            <label for="ch_5">5</label>

            <input type="checkbox" id="ch_6">
            <label for="ch_6">6</label>

            @*///////////////////////////////////////////*@
            <p style="font-weight: bold; margin-bottom: 10px; margin-top: 10px;">Оперативная память</p>

            <input type="checkbox" id="ch_7">
            <label for="ch_7">4 Гб</label>

            <input type="checkbox" id="ch_8">
            <label for="ch_8">8 Гб</label>

            @*///////////////////////////////////////////*@
            <p style="font-weight: bold; margin-bottom: 10px; margin-top: 10px;">Операционная система</p>

            <input type="checkbox" id="ch_9">
            <label for="ch_9">Android</label>

            <input type="checkbox" id="ch_10">
            <label for="ch_10">IOS</label>

            <button type="button" class="btn btn-outline-dark">Поиск</button>
        </div>
        
    </form>
    
}


<!--Карточки товаров-->

<div class="container">
    <div class="row justify-content-between">

        @foreach (PhoneViewModel phone in Model)
        {
            <div class="col-md-4">
                <div class="card">
                    <div class="divImgCardCategories">
                        <img src="@Url.Content(phone.Images.First().Path)" class="imgCardCategories" alt="...">
                    </div>
                    <div class="card-body">
                        <h5 class="headerCard">@phone.Name</h5>
                        <table>
                            <tr class="card-sale">
                                <td>Цена сначала</td>
                                <td>Цена сейчас</td>
                                <td>Мин. цена</td>
                            </tr>
                            <tr class="card-sale">
                                <td class="old-sale">@phone.Price</td>
                                <td class="now-sale">2000</td>
                                <td>1500</td>
                            </tr>
                        </table>
                        <div class="infoCardQtyTimer">
                            <table>
                                <tr class="card-sale">
                                    <td>Осталось шт.</td>
                                    <td>Таймер</td>
                                </tr>
                                <tr class="card-sale">
                                    <td>5</td>
                                    <td class="timerGood"></td>
                                </tr>
                            </table>
                        </div>

                        <a href='@Url.Action("GetPhone", "Home", new { phoneIdDto=phone.Id})' class="btns">Купить</a>
                    </div>
                </div>
            </div>
        }


    </div>
</div>
