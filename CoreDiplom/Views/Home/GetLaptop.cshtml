@model NLayerApp.WEB.Models.LaptopViewModel
@{
    ViewData["Title"] = "GetLaptop";
}

<h1>GetLaptop</h1>



<div id="getPhone">
    <div id="getPhoneHeader">
        <h3 style="text-align: center;">@Model.Name</h3>
    </div>

    <div id="getPhoneSlider">
        <div id="phoneSlider" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                @for (int i = 0; i < Model.Images.Count; i++)
                {
                    if (i == 0)
                    {
                        <div class="carousel-item active" style="text-align: center;">
                            <img src="@Model.Images.First().Path" class="imgCardCategories" alt="...">
                            <div class="carousel-caption d-none d-md-block">
                            </div>
                        </div>
                        i++;
                    }
                    <div class="carousel-item" style="text-align: center;">
                        <img src="@Model.Images.ElementAt(i).Path" class="imgCardCategories" alt="...">
                    </div>
                }
            </div>
            <a class="carousel-control-prev" href="#phoneSlider" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#phoneSlider" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
    <div id="getPhoneInfo">
        <div style="display: flex; justify-content: space-around;">
            <p style="color: #ea5455; font-size: 24pt;">@Model.PriceNow &#8372;</p>

            <a href='@Url.Action("CreateOrderCustomer", "Home", new { prodId = Model.Id })' class="btns" style="width: 200px; height: 50px; text-align: center;">Купить</a>
        </div>

        <p style="text-align: center; font-size: 16pt; font-weight: 600;">Характеристики</p>
        <p>
            Производитель: @Model.Manufacturer
            <span>|</span>
            Процессор: @Model.CPU
            <span>|</span>
            Оперативная память: @Model.RAM
            <span>|</span>
            Память устройства: @Model.Memory
            <span>|</span>
            Вес: @Model.Weight
        </p>

        <p style="text-align: center; font-size: 16pt; font-weight: 600;">Описание</p>
        <p>@Model.OrderSeller.Description</p>
    </div>

</div>