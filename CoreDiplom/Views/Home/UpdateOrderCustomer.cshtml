@model NLayerApp.WEB.Models.OrderCustomerViewModel
@{
    ViewData["Title"] = "UpdateOrderCustomer";
}

<h1>UpdateOrderCustomer</h1>

@using (Html.BeginForm("UpdateOrderCustomer", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.HiddenFor(m => Model.Id)
    <div>
        <label class="col-md-5 control-label">Name</label>
        <div class="col-md-6">
            @Html.TextBoxFor(m => Model.Name, new { @class = "form-control" })
        </div>
    </div>
    <div>
        <label class="col-md-5 control-label">Surname</label>
        <div class="col-md-6">
            @Html.TextBoxFor(m => Model.Surname, new { @class = "form-control" })
        </div>
    </div>
    <div>
        <label class="col-md-5 control-label">Patronymic</label>
        <div class="col-md-6">
            @Html.TextBoxFor(m => Model.Patronymic, new { @class = "form-control" })
        </div>
    </div>
    <div>
        <label class="col-md-5 control-label">Address</label>
        <div class="col-md-6">
            @Html.TextBoxFor(m => Model.Address, new { @class = "form-control" })
        </div>
    </div>
    <div>
        <div class="col-md-offset-6 col-md-6">
            <input type="submit" class="btn btn-default" value="Сохранить" />
        </div>
    </div>
}