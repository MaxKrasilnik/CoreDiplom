@model List<NLayerApp.WEB.Models.LaptopViewModel>
@{
    ViewData["Title"] = "GetLaptops";
    Layout = "_Layout_Products";
}

<h1>GetLaptops</h1>


@section Filters{


    <form asp-controller="Home" asp-action="GetLaptopsSort" method="post" style="padding-top: 50px;">
        <div class="checkbox-container">
            <p style="font-weight: bold; margin-bottom: 10px;">Производитель</p>

            <input type="checkbox" id="ch_1" name="filters" value="Lenovo">
            <label for="ch_1">Lenovo</label>

            <input type="checkbox" id="ch_2" name="filters" value="HP">
            <label for="ch_2">HP</label>

            <input type="checkbox" id="ch_3" name="filters" value="ASUS">
            <label for="ch_3">ASUS</label>

            @*///////////////////////////////////////////*@
            <p style="font-weight: bold; margin-bottom: 10px; margin-top: 10px;">Диагональ экрана</p>

            <input type="checkbox" id="ch_4" name="filters" value="15">
            <label for="ch_4">15'</label>

            <input type="checkbox" id="ch_5" name="filters" value="16">
            <label for="ch_5">16'</label>

            @*///////////////////////////////////////////*@
            <p style="font-weight: bold; margin-bottom: 10px; margin-top: 10px;">Оперативная память</p>

            <input type="checkbox" id="ch_6" name="filters" value="4 ГБ">
            <label for="ch_6">4 ГБ</label>

            <input type="checkbox" id="ch_7" name="filters" value="8 ГБ">
            <label for="ch_7">8 ГБ</label>

            <input type="checkbox" id="ch_8" name="filters" value="16 ГБ">
            <label for="ch_8">16 ГБ</label>

            @*///////////////////////////////////////////*@
        <p style="font-weight: bold; margin-bottom: 10px; margin-top: 10px;">Память устройства</p>

            <input type="checkbox" id="ch_9" name="filters" value="256 ГБ">
            <label for="ch_9">256 ГБ</label>

            <input type="checkbox" id="ch_10" name="filters" value="500 ГБ">
            <label for="ch_10">500 ГБ</label>

            <button type="submit" class="btn btn-outline-dark">Поиск</button>
        </div>
    </form>




}




<!--Карточки товаров-->

<div class="container">
    <div class="row justify-content-around">

        @foreach (LaptopViewModel laptop in Model)
        {
            <div class="col-md-4">
                <div class="card">
                    <div class="divImgCardCategories">
                        <img src="@Url.Content(laptop.Images.First().Path)" class="imgCardCategories" alt="...">
                    </div>
                    <div class="card-body">
                        <h5 class="headerCard">@laptop.Name</h5>
                        <table>
                            <tr class="card-sale">
                                <td>Цена сначала</td>
                                <td>Цена сейчас</td>
                                <td>Мин. цена</td>
                            </tr>
                            <tr class="card-sale">
                                <td class="old-sale">@laptop.PriceStart</td>
                                <td class="now-sale">@laptop.PriceNow</td>
                                <td>@laptop.PriceEnd</td>
                            </tr>
                        </table>
                        <div class="infoCardQtyTimer">
                            <table>
                                <tr class="card-sale">
                                    <td>Осталось шт.</td>
                                    <td>Таймер</td>
                                </tr>
                                <tr class="card-sale">
                                    <td>@laptop.QtyEnd</td>
                                    <td class="timerGood"></td>
                                </tr>
                            </table>
                        </div>

                        <a href='@Url.Action("GetLaptop", "Home", new { laptopIdDto=laptop.Id})' class="btns">Купить</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
