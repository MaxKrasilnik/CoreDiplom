@model NLayerApp.WEB.Models.OrderSellerViewModel
@{
    ViewData["Title"] = "DeleteOrderSeller";
}

<h1>DeleteOrderSeller</h1>

@using (Html.BeginForm("DeleteOrderSeller", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.HiddenFor(m => Model.Id)
    <div>
        <label class="col-md-5 control-label">Header</label>
        <div class="col-md-6">
            @Html.TextBoxFor(m => Model.Header, new { @class = "form-control" })
        </div>
    </div>
    <div>
        <label class="col-md-5 control-label">Description</label>
        <div class="col-md-6">
            @Html.TextBoxFor(m => Model.Description, new { @class = "form-control" })
        </div>
    </div>

    @Html.HiddenFor(m => Model.Product)


    <div>
        <div class="col-md-offset-6 col-md-6">
            <input type="submit" class="btn btn-default" value="Удалить" />
        </div>
    </div>
}